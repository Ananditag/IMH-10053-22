public class Main{
    public static void main(String[] args) {
        System.out.println("Input a double value and a long value : ");
        Scanner input = new Scanner(System.in);
        double d = input.nextDouble();
        long l = input.nextLong();

        System.out.println("The float value of the double value is : " + (float)(d));
        System.out.println("The long value of the given double value is : " + (long)(d));
        System.out.println("The integer value of the long value is : " + (int)(l));
    }
}
